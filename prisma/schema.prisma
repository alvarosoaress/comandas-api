// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  hashPassword String
  name         String
  phone_number Int      @unique
  photo_url    String?
  Client       Client[]
  Shop         Shop[]

  @@map("users")
}

model Address {
  id           Int     @id @default(autoincrement())
  street       String
  number       Int
  neighborhood String
  city         String
  state        String
  country      String
  zipcode      String
  lat          String?
  long         String?
  Shop         Shop[]

  @@map("address")
}

model Client {
  id       Int       @id @default(autoincrement())
  userId   Int
  user     User      @relation(fields: [userId], references: [id])
  birthday DateTime?

  @@map("clients")
}

model Shop {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  address   Address @relation(fields: [addressId], references: [id])
  addressId Int

  @@map("shops")
}
